<% include ../partials/header.ejs %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>
            <p>View our campgrounds from all over the world</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new Campground</a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <% campgrounds.forEach(function(camp){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>">
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <!--  camp._id this is the id of a collection from mongo, we need to access it as _id-->
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>

            </li>
            <%}); %>
        </div>
    </div>
</div>



